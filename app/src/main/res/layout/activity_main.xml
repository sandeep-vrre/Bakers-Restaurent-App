<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bakers1"
        android:scaleType="fitStart" />
    ​
    <TextView
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the bakers"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold" />
    ​
    <TextView
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/b3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-95dp"
        android:textAllCaps="true"
        android:fontFamily="cursive"
        android:text="Baking From The Heart, Since 1994"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignBottom="@id/b4"
        android:layout_marginBottom="-220dp"
        android:src="@drawable/thebakers" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/b4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:text="Everything Is Fresh Here"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/i2"
        android:layout_marginTop="211dp"
        android:layout_centerHorizontal="true"
        android:text="Our Specials"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/s1"
        android:src="@drawable/breadss"
        android:layout_marginTop="-15dp"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-13dp"
        android:text="Baguette,Sourdough Bread, Artisan Coffee, Croissant"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/s2"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:text="Working Days: All Days a Week, 6:00am to 6:00pm"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_below="@id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get In Touch With Us"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4617, Silver Street, Denver 1101"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="+1(720)-370-9002"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="info@bakers.com"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>

